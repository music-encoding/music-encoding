        <elementSpec ident="notehead" module="MEI.shared" mode="add">
          <desc>The part of the note that, when placed on a staff, indicates pitch (and often
            duration).</desc>
          <classes>
            <memberOf key="att.notehead.vis"/>
          </classes>
