<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<div xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:tei="http://www.tei-c.org/ns/1.0"
     xmlns:xi="http://www.w3.org/2001/XInclude">
   <specGrp xml:id="module.MEI.tablature">
      <moduleSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                  xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                  xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                  ident="MEI.tablature"
                  mode="add"
                  predeclare="false">
         <desc>Tablature component declarations.</desc>
      </moduleSpec>
      <classSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                 xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                 xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                 ident="att.note.ges.tablature"
                 module="MEI.tablature"
                 type="atts"
                 mode="add"
                 predeclare="false">
         <desc>Gestural domain attributes.</desc>
         <attList org="group">
            <attDef ident="tab.fret"
                    usage="opt"
                    mode="add"
                    predeclare="false"
                    ns="http://www.tei-c.org/ns/1.0">
               <desc>Records the fret at which a string should be stopped.</desc>
               <datatype minOccurs="1" maxOccurs="1">
                  <rng:ref name="data.FRETNUMBER"/>
               </datatype>
            </attDef>
            <attDef ident="tab.string"
                    usage="opt"
                    mode="add"
                    predeclare="false"
                    ns="http://www.tei-c.org/ns/1.0">
               <desc>Records which string is to be played.</desc>
               <datatype minOccurs="1" maxOccurs="1">
                  <rng:ref name="data.STRINGNUMBER"/>
               </datatype>
            </attDef>
         </attList>
      </classSpec>
      <classSpec xmlns:rng="http://relaxng.org/ns/structure/1.0"
                 xmlns:sch="http://purl.oclc.org/dsdl/schematron"
                 xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
                 ident="att.staffDef.ges.tablature"
                 module="MEI.tablature"
                 type="atts"
                 mode="add"
                 predeclare="false">
         <desc>Gestural domain attributes for staffDef in tablature.</desc>
         <attList org="group">
            <attDef ident="tab.strings"
                    usage="opt"
                    mode="add"
                    predeclare="false"
                    ns="http://www.tei-c.org/ns/1.0">
               <desc>Provides a *written* pitch and octave for each open string or course of
            strings.</desc>
               <datatype minOccurs="1" maxOccurs="1">
                  <rng:list>
                     <rng:oneOrMore>
                        <rng:data type="token">
                           <rng:param name="pattern">[a-g][0-9](s|f|ss|x|ff|xs|sx|ts|tf|n|nf|ns|su|sd|fu|fd|nu|nd|1qf|3qf|1qs|3qs)?([a-g][0-9](s|f|ss|x|ff|xs|sx|ts|tf|n|nf|ns|su|sd|fu|fd|nu|nd|1qf|3qf|1qs|3qs)?)*</rng:param>
                        </rng:data>
                     </rng:oneOrMore>
                  </rng:list>
               </datatype>
            </attDef>
         </attList>
      </classSpec>
   </specGrp>
</div>
