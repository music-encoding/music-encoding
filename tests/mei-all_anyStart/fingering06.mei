<!-- Gould, Behind Bars, p. 375, ex. 1 -->
<!-- Guitar, mixed left- and right-hand fingering of chords -->
<!-- @staff has not been encoded for ease of parsing, but it should be present. -->
<section xmlns="http://www.music-encoding.org/ns/mei"
  xmlns:mei="http://www.music-encoding.org/ns/mei" xmlns:xlink="http://www.w3.org/1999/xlink">
  <measure n="1">
    <fingGrp tstamp="1">
      <!-- The presentational style of the fingerings has not been encoded. -->
      <fing>m</fing>
      <fing>i</fing>
    </fingGrp>
    <fing tstamp="1">p</fing>
    <fingGrp tstamp="3">
      <fing>a</fing>
      <fing>m</fing>
      <fing>i</fing>
    </fingGrp>
    <fing tstamp="3">p</fing>
    <fing tstamp="4">p</fing>
  </measure>
  <measure n="2">
    <!-- left-hand fingering -->
    <fing tstamp="1">0</fing>
    <fing tstamp="1">1</fing>
    <!-- Alternatively, the fingerings above can be treated as a single fingGrp and shifted
      left / right as necessary using @ho: 
    <fingGrp tstamp="1">
      <fing ho="1">0</fing>
      <fing>1</fing>
    </fingGrp> -->
    <fing tstamp="1">p</fing>
    <fing tstamp="2">0</fing>
    <fing tstamp="2">p</fing>
    <fing tstamp="4">0</fing>
    <fing tstamp="4">p</fing>
  </measure>
</section>
